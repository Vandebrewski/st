<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.basvanderwilk.kindergebarenlite"
        versionCode = "10"
        version   = "1.0.0">

    <name>KinderGebaren</name>

    <description>
       Leer uw kind gebaren op een leuke manier.
    </description>

    <author href="http://new-impulse.com" email="info@new-impulse.com">
       New-impulse media
    </author>

	<gap:platform name="ios" />

	
    <!--
        Enable individual API permissions here.
        The "device" permission is required for the 'deviceready' event.

    <feature name="http://api.phonegap.com/1.0/device" />    -->

    <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
    -->


 <preference name="permissions" value="none"/>


 

    <icon src="resources/icons/icons-57.png" />

    
    <icon src="resources/icons/icons-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="resources/icons/icons-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="resources/icons/icons-76.png"            gap:platform="ios"        width="76" height="76" />
    <icon src="resources/icons/icons-120.png"            gap:platform="ios"        width="120" height="120" />
    <icon src="resources/icons/icons-152.png"            gap:platform="ios"        width="72" height="72" />    
    <icon src="resources/icons/icons-114@2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="resources/icons/icons-144@2x.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="resources/icons/icons-152@2x.png"         gap:platform="ios"        width="152" height="152" />


    <gap:splash src="resources/images/screen-iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="resources/icons/iphone5.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="resources/icons/768x1024.png"      gap:platform="ios"     width="768" height="1024" />






    <!--
        Define access to external domains.

        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.

        Otherwise, you can specify specific domains:
    -->
    <access origin="http://127.0.0.1*"/> <!-- allow local pages -->
    <!--
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
        <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
    -->

</widget>
